{{> home/form-message }}

<div class="row">
    <div class="col-sm-4">
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter category name" class="form-control">
            </div>
        
        <button class="btn btn-primary">Create new category</button>
        </form>
    </div>

    <div class="col-sm-8">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th colspan="2">Options</th>
                </tr>
            </thead>
            
            <tbody>    

                {{#each categories}}
                    <tr>
                        <td>{{ id }}</td>
                        <td>{{ name }}</td>
                        <td><a href="/admin/categories/edit/{{id}}" class="btn btn-warning">Edit</a></td>
                        <td>                    
                            <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>                      
                            </form>
                        </td>
                    </tr>
                {{/each}}
                 
            </tbody>
        </table>
    </div>
</div>