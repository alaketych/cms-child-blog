<h1>All published Posts</h1>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allowed Comments</th>
            <th>Description</th>

            <th colspan="2">Options</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
            <tr>
                <td> {{ id }}</td>
                <td> {{ title }}</td>
                <td> {{ status }}</td>
                <td> {{ allowComments }}</td>
                <td> {{ body }}</td>

                <td><a href="/admin/posts/edit/{{id}}" class="btn btn-warning">Edit</a></td>
                <td>                    
                    <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>

</table>
