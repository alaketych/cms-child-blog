<div class="row-info">
    <h1>All published posts</h1>
    
    <a href="/admin/posts/create">
        <button class="btn btn-default">Create new post</button>
    </a>
</div>

{{> home/form-message }}

<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Media</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allowed Comments</th>
            <th>Description</th>

            <th colspan="2">Options</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
            <tr>    
                <td> {{ id }}</td>
                <td> <img height="100" src="/uploads/{{file}}" alt="picture"/></td>
                <td> {{ title }}</td>
                <td> {{ status }}</td>
                <td> {{ allowComments }}</td>
                <td> {{ body }}</td>

                <td><a href="/admin/posts/edit/{{id}}" class="btn btn-warning">Edit</a></td>
                <td>                    
                    <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>                      
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>

</table>
