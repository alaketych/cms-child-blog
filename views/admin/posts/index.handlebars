<h1>All published Posts</h1>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allowed Comments</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
            <tr>
                <td> {{ id }}</td>
                <td> {{ title }}</td>
                <td> {{ status }}</td>
                <td> {{ allowComments }}</td>
                <td> {{ body }}</td>
            </tr>
        {{/each}}
    </tbody>

</table>
