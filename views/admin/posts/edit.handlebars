<h1>Edit posts</h1>

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{ post.title }}"/>
    </div>

    <div class="form-group">
        <label for="title">Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
                <option value="public">public</option>
                <option value="private">private</option>
                <option value="draft">draft</option>
            {{/select}}
        </select>
    </div>

    <div class="form-group">
        <label for="title">Media</label>
        <input type="file" name="file" class="form-control">
    </div>

    <div class="form-check">
        <label for="allowComments">
            <input name="allowComments" type="checkbox" {{#if post.allowComments}}checked="true"{{/if}} class="form-check-input" id="allowComments"/>
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Body</label>
        <textarea name="body" rows="10" type="text" class="form-control" id="body">{{ post.body }}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>